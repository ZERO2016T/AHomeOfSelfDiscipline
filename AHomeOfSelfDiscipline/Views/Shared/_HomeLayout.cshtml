<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   @* <link href="~/image/Home/xy.ico" rel="shortcut icon" />*@
    <title>@ViewBag.Title - 自律之家</title>
    <link href="~/Content/Shared/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Shared/sweetalert.css" rel="stylesheet" />
    <link href="~/Content/Home/main.css" rel="stylesheet" />
    <link href="~/Content/Home/animate.css" rel="stylesheet" />
    <link href="~/Content/Home/responsive.css" rel="stylesheet" />
    <link href="~/Content/Home/prettyPhoto.css" rel="stylesheet" />
    <link href="~/Content/Shared/CommonStyle.css" rel="stylesheet" />
    <link href="~/Content/Home/common.css" rel="stylesheet" />
    
    <link href="~/Content/Banner/css/bootstrap-touch-slider.css" rel="stylesheet" media="all">
    
    @* 关于我们 *@
    <link rel="stylesheet" type="text/css" href="~/Content/About/css/demo.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/About/css/common.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/About/css/style.css" />

</head>
<body>
<header id="header">
    <nav class="navbar navbar-inverse" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    @* src="~/image/Home/logo.jpg"  *@
                    <img alt="川农·信工院·校友之家" src="~/image/Home/logo.png"  title="川农·信工院·校友之家"/>
                </a>
            </div>
            <div class="collapse navbar-collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("首页", "Index", "Home")</li>
                    <li><a href="#" class="scrollnoticeSlowly">公告</a></li>
                    <li><a href="#" class="scrollMatchSlowly">赛事</a></li>
                    <li><a href="#" class="scrollAboutSlowly">关于我们</a></li>
                    <li><a href="#" class="scrollContactSlowly">联系我们</li>
                    @if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("User"))
                        {
                            <li class="active">@Html.ActionLink("我的主页", "Index", "User")</li>
                        }
                        else if (User.IsInRole("Admin"))
                        {
                            <li class="active">@Html.ActionLink("我的主页", "ManageUser", "Admin")</li>
                        }
                        else
                        {
                            <li class="active">@Html.ActionLink("我的主页", "ManageAdmin", "SuperAdmin")</li>
                        }
                    }
                    else
                    {
                        <li>@Html.ActionLink("登录", "Login", "Home")</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
    @*<div class="container body-content">
      
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>*@
@RenderBody()
<footer class="center-align" id="footer">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 text-center">&copy; @DateTime.Now.Year 川农 · 信工 · 自律部 - Power by <a href="http://www.wingstudio.org" title="关于我们" target="_blank">WingStudio Zero</a></div>
            <div class="col-sm-6">
                <ul class="text-center">
                    <li>@Html.ActionLink("首页", "", "")</li>
                    <li>@Html.ActionLink("关于我们", "", "")</li>
                    <li>@Html.ActionLink("联系我们", "", "")</li>
                </ul>
            </div>
        </div>
    </div>
</footer>

<a id="toTop" onclick="myInterval()"><span class="glyphicon glyphicon-menu-up" aria-hidden="true"></span></a>
<script src="~/Scripts/jquery-1.12.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/scripts/sweetalert-dev.js"></script>
<script src="~/Content/Home/jquery.prettyPhoto.js"></script>
<script src="~/Content/Home/jquery.isotope.min.js"></script>
<script src="~/Content/Home/main.js"></script>
<script src="~/Content/Home/wow.min.js"></script>
<script src="~/Scripts/CommonJS.js"></script>
<script src="~/Content/Home/common.js"></script>
    
    
<script src="http://cdn.bootcss.com/jquery.touchswipe/1.6.18/jquery.touchSwipe.min.js"></script>
<script src="~/Content/Banner/js/bootstrap-touch-slider.js"></script>
<script type="text/javascript">
    $('#bootstrap-touch-slider').bsTouchSlider();
</script>
@*juqery平滑滚动*@
<script >
    jQuery(document).ready(function($){
        $('.scrollnoticeSlowly').click(function () { $('html,body').animate({ scrollTop: $('.noticeSlowly').offset().top }, 800); });

        $('.scrollMatchSlowly').click(function () { $('html,body').animate({ scrollTop: $('.MatchSlowly').offset().top }, 800); });

        $('.scrollAboutSlowly').click(function() {
            $('html,body').animate({ scrollTop: $('.AboutSlowly').offset().top }, 800)
        });

        $('.scrollContactSlowly').click(function () { $('html,body').animate({ scrollTop: $('.ContactSlowly').offset().top }, 800); });
    });
</script>
</body>
</html>