
@{
    ViewBag.Title = "用户管理";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}
@using AHomeOfSelfDiscipline.Models
@using PagedList.Mvc
@model PagedList.IPagedList<AHomeOfSelfDiscipline.Models.User>
<div class="box">
    <div class="box-header">
        <h3>大家庭里的信息</h3>
    </div>
    <form action="~/SuperAdmin/UserManage" method="get">
        <div class="row p-a">
            <div class="col-sm-5">
                <select name="groupInfo" class="input-sm form-control w-sm inline v-middle">
                    <option value="AllGroup" selected="selected">所有组</option>
                    <option value="PersonnelSection">人事组</option>
                    <option value="SupervisionTeam">监察组</option>
                    <option value="OutreachGroup">外联组</option>
                    <option value="PropagandaGroup">宣传组</option>
                </select>
                <button type="submit" class="btn btn-sm btn-success">更新</button>
            </div>
            <div class="col-sm-4">
            </div>
            <div class="col-sm-3">
                <div class="input-group input-group-sm">
                    <input name="Content" type="text" class="form-control" placeholder="对学号进行模糊查询">
                    <span class="input-group-btn">
                        <button class="btn b-a white" type="submit">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </form>
    <div class="table-responsive">
        <table class="table table-striped b-t">
            <thead>
            <tr>
                <th>学号</th>
                <th>姓名</th>
                <th>职务组</th>
                <th>第一职务</th>
                <th>第二职务</th>
                <th>创建时间</th>
                <th>重置密码</th>
                <th>删除</th>
            </tr>
            </thead>
            <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StudentNumber</td>
                        <td>@item.Name</td>
                        @{
                            switch (item.GroupPost)
                            {
                                case "OutreachGroup":
                                    <td>外联组</td>
                                    break;
                                case "PersonnelSection":
                                    <td>人事组</td>
                                    break;
                                case "PropagandaGroup":
                                    <td>宣传组</td>
                                    break;
                                case "SupervisionTeam":
                                    <td>监察组</td>
                                    break;
                            }
                        }

                        @{
                            switch (item.Post)
                            {
                                case "CommitteeMember":
                                    <td>委员</td>
                                    break;
                                case "Mohamed":
                                    <td>干事</td>
                                    break;
                            }
                        }

                        @{

                            switch (item.SecondPost)
                            {
                                case "GroupLeader":
                                    <td>组长</td>
                                    break;
                                case "DeputyTeamLeader":
                                    <td>副组长</td>
                                    break;
                                case "Empty":
                                    <td>暂无</td>
                                    break;
                            }
                        }
                        }
                        <td>@item.CreateTime</td>
                        <td>
                            <a href="~/SuperAdmin/ResetPassword?userId=@item.Id"><i style="color: green" class="material-icons md-24"></i></a>
                        </td>
                        <td>
                            <a href="~/SuperAdmin/DeleteUser?userId=@item.Id"><i style="color: red" class="material-icons md-24"></i></a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>
<div>
    @Html.PagedListPager(Model, pageNumber => Url.Action("UserManage",new{pageNumber}))
</div>